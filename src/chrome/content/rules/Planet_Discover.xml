<ruleset name="Planet Discover">

	<target host="planetdiscover.com" />
	<target host="*.planetdiscover.com" />


	<securecookie host="^(?:.+\.)?planetdiscover\.com$" name=".+" />


	<!--	Clients have unique subdomains.
						-->
	<rule from="^http://([\w\-]\.)?planetdiscover\.com/"
		to="https://$1planetdiscover.com/" />

</ruleset>
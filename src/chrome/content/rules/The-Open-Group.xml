<!--
	Nonfunctional subdomains:

		- $	(redirects to www3)
		- pubs	(redirects to https://www2.opengroup.org/josso/signon/login.do...)
		- www	(ditto)
		- www3	(ditto)

-->
<ruleset name="The Open Group (partial)">

	<target host="www2.opengroup.org" />


	<securecookie host="^www2\.opengroup\.org$" name=".*" />


	<rule from="^http://www2\.opengroup\.org/"
		to="https://www2.opengroup.org/" />

</ruleset>

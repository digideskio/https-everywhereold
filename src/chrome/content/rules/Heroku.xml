<ruleset name="Heroku">

	<target host="heroku.com" />
	<target host="*.heroku.com" />
	<target host="*.herokuapp.com" />


	<!--	Avoiding cross-domain cookies.
						-->
	<securecookie host="^[\w\-]+\.herokuapp\.com$" name=".*" />


	<rule from="^http://([^/:@\.]+\.)?heroku(app)?\.com/"
		to="https://$1heroku$2.com/" />

</ruleset>

<!--
	For artists, see Bandcamp-artists.xml.


	blog.bandcamp.com is handled in WordPress-blogs.xml.

-->
<ruleset name="Bandcamp">

	<target host="bandcamp.com" />
	<target host="f.bandcamp.com" />
	<target host="s.bandcamp.com" />
	<target host="www.bandcamp.com" />
	<target host="f0.bcbits.com" />


	<rule from="^http://((?:[fs]|www)\.)?bandcamp\.com/"
		to="https://$1bandcamp.com/" />

	<!--	- Cert: gp1.wac.edgecastcdn.net
		- 404s
			-->
	<rule from="^https?://f0\.bcbits\.com/"
		to="https://f.bandcamp.com/" />

</ruleset> 

<ruleset name="Imgur (mismatches)" default_off="mismatch">

	<!--	cert: edgecastcdn.net	-->
	<target host="i.imgur.com"/>
		<exclusion pattern="^http://i\.imgur\.com/((images|include)(/.*)?)?$"/>
	<!--	cert: imgur.com		-->
	<target host="img.imgur.com"/>


	<securecookie host="^img\.imgur\.com$" name=".+" />


	<rule from="^http://i(?:mg)?\.imgur\.com/"
		to="https://img.imgur.com/"/>

</ruleset>

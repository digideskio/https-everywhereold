<!--
	Nonfunctional domains:

		- bluemetrix.com
		- www.bluemetrix.com	(times out)

-->
<ruleset name="Bluemetrix (partial)">

	<target host="bmmetrix.com" />
	<target host="*.bmmetrix.com" />


	<!--	Included on 3rd-party websites.	-->
	<rule from="^http://t\.bmmetrix\.com/"
		to="https://t.bmmetrix.com/" />

	<!--	Cert only matches www.	-->
	<rule from="^https?://(?:www\.)?bmmetrix\.com/"
		to="https://www.bmmetrix.com/" />

</ruleset>

<ruleset name="PagPop">

	<target host="pagpop.com.br" />
	<target host="*.pagpop.com.br" />
	<target host="vitalcred.com.br" />
	<target host="*.vitalcred.com.br" />


	<securecookie host="^(?:.*\.)?(?:pagpop|vitalcred)\.com\.br$" name=".+" />


	<rule from="^http://(www\.)?(pagpop|vitalcred)\.com\.br/"
		to="https://$1$2.com.br/" />

</ruleset>